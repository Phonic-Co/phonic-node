{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "include": [
      "src/**/*.ts",
      "tsup.config.ts",
      "biome.json",
      "package.json",
      "README.md",
      "tsconfig.json"
    ]
  }
}
