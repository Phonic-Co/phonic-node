{
  "name": "phonic",
  "version": "0.2.0",
  "description": "Phonic Node.js SDK",
  "scripts": {
    "build": "tsup",
    "check": "biome check --write",
    "ci": "bun tsc && biome ci && bun test",
    "version": "changeset version && bun check",
    "release": "bun run build && changeset publish"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Phonic-Co/phonic-node.git"
  },
  "homepage": "https://github.com/Phonic-Co/phonic-node#readme",
  "bugs": {
    "url": "https://github.com/Phonic-Co/phonic-node/issues"
  },
  "dependencies": {
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.11",
    "@types/bun": "1.1.14",
    "tsup": "8.3.5",
    "typescript": "5.7.2",
    "zod": "3.24.1"
  },
  "files": ["dist/**"],
  "author": {
    "name": "Phonic",
    "url": "https://phonic.co"
  },
  "keywords": [
    "phonic",
    "text-to-speech",
    "tts",
    "javascript",
    "typescript",
    "ai",
    "voice",
    "audio",
    "sdk"
  ],
  "license": "MIT"
}
